    <script type="text/javascript">
      $(document).ready(function() {
          // Datepicker
          $('#datepicker').datepicker({
              inline: true,
              onSelect: function(dateText, inst) {
                  $.ajax({
                      url: "http://fvp.kpi.ua/pages/scheduler/" + dateText,
                      dataType: "html",
                      beforeSend: function() {},
                      success: function(data) {
                          $('#file-links').html(data);
                      }
                  });
                  return false;
              },
              // Полные имена дней недели
              dayName: ['Неділя', 'Понеділок', 'Вівторок', 'Середа', 'Четверг', 'П\'ятниця', 'Субота'],
              // Сокращенные имена дней недели
              dayNamesMin: ['Нд', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб'],
              // Название месяцев
              monthNames: ['Січень', 'Лютий', 'Березень', 'Квітень', 'Травень', 'Червень', 'Липень', 'Серпень', 'Вересень', 'Жовтень', 'Листопад', 'Грудень'],
              // Сокращенные названия месяцев
              monthNamesShort: ['Січень', 'Лютий', 'Березень', 'Квітень', 'Травень', 'Червень', 'Липень', 'Серпень', 'Вересень', 'Жовтень', 'Листопад', 'Грудень'],
              // Формат даты, например 27/04/2011
              dateFormat: 'dd/mm/yy',
              // Первый день недели, 0 - воскресенье.
              firstDay: 1
          });
          // var firstView = $.cookie('firstView');
          // if ( firstView === undefined ) {
          //  $.cookie('firstView', '0', { path: '/' });
          //     window.location = "http://fvp.kpi.ua/materials/show/17";
          // }
      });
    </script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
